datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int     @id @default(autoincrement())
  username    String  @unique
  password    String
  genero      String
  cpf         String
  telefone    String
  cep         String
  rua         String
  bairro      String
  complemento String
  cidade      String
  estado      String
  fotoPerfil  String?
}

model Medico {
  id            Int     @id @default(autoincrement())
  nome          String
  crm           String  @unique
  especialidade String
  telefone      String
  email         String  @unique
  senha         String
  fotoPerfil    String?
}
}
